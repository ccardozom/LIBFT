NAME = libft

LNAME = libft.a

CFLAGS = -Wall -Werror -Wextra

LFLAGS = -c

LSOURCE = *.c

OBJS = $(LSOURCE:.c=.o)

all: $(NAME)

$(NAME):
	gcc $(CFLAGS) $(LFLAGS) $(LSOURCE)
	ar rc $(LNAME) $(OBJS) 

clean:
	rm -f *.o
fclean:	clean
	rm -f $(LNAME)

re: fclean all
